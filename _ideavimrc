set number
set relativenumber
set expandtab
set shiftwidth=2
set tabstop=2

let mapleader=","

" environment settings
nnoremap ;f :action ToggleFullScreen<cr>
nnoremap ;qq :action CloseProject<cr>
nnoremap ;q :q<cr>
nnoremap ;w :w<cr>
nnoremap ;v :vs<cr>
nnoremap ;s :split<cr>

" build related
nnoremap <leader>w :action MakeModule<cr>
nnoremap <leader>c :action Compile<cr>

" code surfing
map <leader>ff :action SearchEverywhere<cr>

map <leader>b :action ToggleLineBreakpoint<CR>
map <leader>gd :action GotoImplementation<CR>
map <leader>re :action RenameElement<cr>
map <leader>fr :action ReformatCode<cr>

map <leader>a :action GotoRelated<cr>
map <leader>su :action GotoSuperMethod<cr>
map <leader>ch :action TypeHierarchy<cr>


" Find and replace
"nnoremap / :action Find<CR>
"nnoremap n :action FindNext<CR>
"nnoremap N :action FindPrevious<CR>

" Emulations
set vim-surround

" Git stuff
map <leader>ga :action Git.Add<cr>
map <leader>hh :action Diff.NextChange<cr>
