set number
"set relativenumber
set expandtab
set shiftwidth=4
set tabstop=4

let mapleader=" "

map <leader>ff :action ToggleFullScreen<cr>
map <leader>qq :action CloseProject<cr>

map <leader>t :action SearchEverywhere<cr>

map <leader>b :action ToggleLineBreakpoint<CR>
map <leader>gd :action GotoImplementation<CR>
map <leader>re :action RenameElement<cr>
map <leader>fr :action ReformatCode<cr>

nnoremap <leader>w :action MakeModule<cr>
nnoremap <leader>c :action Compile<cr>
nnoremap ;w :w<cr>

" Find and replace
"nnoremap / :action Find<CR>
"nnoremap n :action FindNext<CR>
"nnoremap N :action FindPrevious<CR>

" Emulations
set vim-surround

" Git stuff
map <leader>ga :action Git.Add<cr>
map <leader>hh :action Diff.NextChange<cr>
